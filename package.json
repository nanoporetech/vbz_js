{
  "name": "vbzjs",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/bundle.js",
  "path": "./dist",
  "url": "/",
  "targets": {
    "browser": {
      "context": "browser",
      "outputFormat": "commonjs"
    },
    "main": {
      "context": "node",
      "engines": {
        "node": ">= 16.0.0"
      }
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build:svbyte": "cd streamvbyte && ./build.sh",
    "build:bundle-test": "npm run build:svbyte && webpack --config webpack.config.js",
    "build:node": "parcel build index.js --target main",
    "build": "rm -rf dist && mkdir -p dist && npm run build:svbyte && npm run build:node",
    "serve": "serve -s dist",
    "test": "jest --runInBand --detectOpenHandles",
    "test:watch": "npm test --watch"
  },
  "devDependencies": {
    "jest": "^27.3.1",
    "jest-fetch-mock": "^3.0.3",
    "jest-puppeteer": "^6.0.0",
    "parcel": "latest",
    "puppeteer": "^10.4.0",
    "serve": "^12.0.1"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "verbose": true,
    "resetMocks": false,
    "preset": "jest-puppeteer",
    "collectCoverageFrom": [
      "tests/**/*.test.{js}",
      "!node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -15
      }
    }
  },
  "dependencies": {
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "zstd-codec": "^0.1.2"
  }
}

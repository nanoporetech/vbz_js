{
  "dependencies": {
    "zstd-codec": "^0.1.2"
  },
  "scripts": {
    "build:svbyte": "cd streamvbyte && ./build.sh",
    "build:bundle": "browserify index.js -o dist/bundle.js -t babelify --presets es2015 && node post-install.js",
    "build": "mkdir -p dist && npm run build:svbyte && npm run build:bundle",
    "serve": "serve -s dist",
    "test": "jest --runInBand --detectOpenHandles",
    "test:watch": "npm test --watch"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babelify": "^8.0.0",
    "browserify": "^17.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "babel-jest": "^27.3.1",
    "babel-plugin-transform-import-meta": "^2.1.0",
    "jest": "^27.3.1",
    "jest-fetch-mock": "^3.0.3",
    "jest-puppeteer": "^6.0.0",
    "puppeteer": "^10.4.0",
    "serve": "^12.0.1"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "verbose": true,
    "resetMocks": false,
    "preset": "jest-puppeteer",
    "collectCoverageFrom": [
      "tests/**/*.test.{js}",
      "!node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -15
      }
    }
  }
}
